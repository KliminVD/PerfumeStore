<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.courseproject.Fragments.CatalogFragment"
        android:label="First Fragment"
        tools:layout="@layout/fragment_catalog">
    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.courseproject.Fragments.CartFragment"
        android:label="Second Fragment"
        tools:layout="@layout/fragment_cart">
    </fragment>

    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.courseproject.Fragments.ConstructFragment"
        android:label="Third Fragment"
        tools:layout="@layout/fragment_construct">
    </fragment>

    <fragment
        android:id="@+id/forthFragment"
        android:name="com.example.courseproject.Fragments.SettingsFragment"
        android:label="Forth Fragment"
        tools:layout="@layout/fragment_settings">
    </fragment>
    <action
        android:id="@+id/action_global_navigation_home"
        app:destination="@id/firstFragment" />

    <action
        android:id="@+id/action_global_navigation_dashboard"
        app:destination="@id/secondFragment" />

    <action
        android:id="@+id/action_global_navigation_notifications"
        app:destination="@id/thirdFragment" />

</navigation>
